<div class="container text-center">
  <div class="row">
    <div>
      <h4>{{ section.settings.heading }}</h4>
    </div>
    {%- if section.settings.sub_heading != blank -%}
      <div>
        <p>{{ section.settings.sub_heading }}</p>
      </div>
    {%- endif -%}
    {%- assign collections = section.settings.collection.products -%}
    {% for product in collections %}
      <div class="col-3 card">
        <div>
          {{ product.featured_image | image_url: width: 300 | image_tag }}
        </div>
        <div>
          <p>Title: {{ product.title }}</p>
        </div>
        <div>
          <p>Price: {{ product.price | money }}</p>
        </div>
        <div>
          <a href="{{product.url}}">View More</a>
        </div>
      </div>

    {%- else -%}
      {%- assign product_title = "Title 01, Title 02, Title 03, Title 04, Title 05, Title 06, Title 07, Title 08" | split: "," -%}
      {% for item in (1..8) %}
        <div class="col-3 card">
          {%- capture current -%}
              {%- cycle 1, 2, 3, 4 -%}
            {%- endcapture -%}
          <div>
            {{ "product-apparel-" | append: current | placeholder_svg_tag }}
          </div>
          <div>
            <p>Title: {{ product_title[forloop.index0] }}</p>
          </div>
          <div>
            <p>Price: $24</p>
          </div>
          <div>
            <a href="#">View More</a>
          </div>
        </div>
      {% endfor %}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Collection",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "This Is Heading"
      }, {
        "type": "richtext",
        "id": "sub_heading",
        "label": "Sub Heading"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "Select Collection"
      }
    ],
    "presets": [
      {
        "name": "Feture Collections",
        "settings": {},
        "category": "Collection"
      }
    ]
  }
{% endschema %}