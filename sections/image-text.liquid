<div class="container">
  <div class="heading">
    <h4>{{ section.settings.heading }}</h4>
  </div>

  {%- if section.settings.sub-heading != blank -%}
    <div class="sub-heading">
      <p>{{ section.settings.sub-heading }}</p>
    </div>
  {%- endif -%}


  {% for block in section.blocks %}
    <div class="card row">
      <div class="col-6 img">
        {%- if block.settings.image != blank -%}
          {{ block.settings.image | image_url: width: 300 | image_tag }}

        {%- else -%}
          {{ "collection-apparel-1" | placeholder_svg_tag }}
        {%- endif -%}
      </div>
      <div class="col-6 image-heading">
        <h1>{{ block.settings.img-heading }}</h1>
        <p>{{ block.settings.img-sub-heading }}</p>
      </div>
    </div>
  {% endfor %}


</div>

{% schema %}
  {
    "name": "Multicollumn Main",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Multi Heading",
        "default": "Multicollumn Heading"
      }, {
        "type": "richtext",
        "id": "sub-heading",
        "label": "Sub Heading"
      }
    ],
    "blocks": [
      {
        "type": "aktarul",
        "name": "saiful",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Select Image"
          }, {
            "type": "text",
            "id": "img-heading",
            "label": "Image Level",
            "default": "image level text"
          }, {
            "type": "richtext",
            "id": "img-sub-heading",
            "label": "Image Sub Heading",
            "default": "<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Deleniti, tenetur!</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Multicollumn Presets",
        "settings": {},
        "blocks": [
          {
            "type": "aktarul"
          }, {
            "type": "aktarul"
          }, {
            "type": "aktarul"
          }
        ]
      }
    ]
  }
{% endschema %}